<html t:type="booklayout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" t:title="prop:book?.title" t:bookId="book?.id"  t:menu="menu" t:adminActions="adminActions" t:left="left" t:right="right" t:center="center" t:adminLinks="adminLinks" t:publicLinks="publicLinks" >
	
	<t:feedlink t:page="book/rss" t:titleKey="recent-activity" t:titleFormat="book?.title" t:context="book?.id" />
	
	<t:block t:id="titleBlock">
		<h2 class="title-with-link">
			${chapter?.title}
			<a href="#" t:type="actionlink" class="active" t:id="showAddChapterField" t:mixins="wooki/showHideOnClick" t:toShow="update-title-div" t:hideLnkId="hide-edit-title" t:resetFormClass="reset-after-hide">(modify)</a> 
		</h2>
		<div style="display:none;" id="update-title-div">
			<t:form t:id="updateTitle" class="small-form reset-after-hide" t:zone="updateTitleZone">
				<t:errors />
				<table>
					<tr>
						<td>
							<t:textfield t:id="title" t:value="chapter.title" class="long-field" />
						</td>
					</tr>
				</table>
				<div class="form-submit">
					<input t:type="submit" class="btn-active" value="Update Title" /> or <a href="#" id="hide-edit-title">cancel</a>
				</div>
			</t:form>
		</div>
	</t:block>

	<t:zone t:id="updateTitleZone" t:show="none" t:update="none">
		<t:delegate to="block:titleBlock"/>
	</t:zone>
	
	<form t:type="form" t:id="editChapterForm" t:autofocus="false">
		<t:errors />
		<fieldset>
			<input t:type="textarea" t:id="data" t:mixins="wymeditor" t:uploadImageDialogId="uploadImageDialogId"/>
		</fieldset>
		<div class="form-submit wym-autosave">
			<t:submit t:id="update" t:type="submit" t:event="update" class="wymupdate btn-active" style="border:0px !important" value="Save draft" title="Modifications will be only visible by authors" />
			<t:submit t:id="publish" t:type="submit" t:event="publish" class="wymupdate btn-active" style="border:0px !important" value="Publish" title="Modifications will be visible by everyone" />
			or 
			<t:if test="abstractChapter">
				<a href="#" t:type="pagelink" t:page="book/index" t:context="book?.id" t:mixins="wooki/confirm" t:message="message:cancel-edit-message">${message:cancel-link}</a>
				<p:else>
					<a href="#" t:type="pagelink" t:page="chapter/index" t:context="cancelCtx" t:mixins="wooki/confirm" t:message="message:cancel-edit-message">${message:cancel-link}</a>
				</p:else>
			</t:if>
		</div>
	</form>

</html>
