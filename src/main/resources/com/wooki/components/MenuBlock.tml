<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter">

	<ul id="${blockId}" class="${blockClasses}">
		<t:loop t:source="links" t:value="current" t:empty="block:empty" t:index="index">
			<t:delegate to="block:menuItem" />
		</t:loop>
	</ul>

	<t:block id="empty">
		<li>&nbsp;</li>
	</t:block>

	<t:block id="menuItem">
		<li class="${rowClass}">
			<t:if test="action">
				<a class="bookmenuitem" t:type="eventLink" t:context="currentEventLink.context" t:event="prop:currentEventLink.event">${label}</a>
				<p:else>
					<a class="bookmenuitem" t:type="pageLink" t:page="prop:currentPageLink.page" t:context="currentPageLink.context">${label}</a>
				</p:else>
			</t:if>
		</li>
	</t:block>

</t:container>
